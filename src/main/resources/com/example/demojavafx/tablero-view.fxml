<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demojavafx.TableroController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <TabPane tabClosingPolicy="UNAVAILABLE">
        <tabs>
            <Tab text="Tablero de juego">
                <AnchorPane>
                    <children>
                        <VBox>
                            <children>
                                <Label text="Tablero del Juego" textAlignment="CENTER" textFill="RED">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Label>
                                <Label fx:id="welcomeText" />
                                <GridPane fx:id="tableroDeJuego" />
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
            </Tab>
            <Tab text="Insertar individuo">
                <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                        <children>
                            <VBox alignment="CENTER" spacing="10.0">
                                <children>
                                    <Label text="Tipo de individuo" />
                                    <ComboBox fx:id="individuosComboBox" prefWidth="200.0" />
                                    <Label text="Posición X" />
                                    <TextField fx:id="posicionXTextField" prefHeight="25.0" prefWidth="148.0" />
                                    <Label text="Posición Y" />
                                    <TextField fx:id="posicionYTextField" prefHeight="25.0" prefWidth="148.0" />
                                    <Button text="Insertar Individuo" onAction="#onInsertarIndividuoClick" />
                                </children>
                            </VBox>
                        </children>
                    </AnchorPane>
                </content>
            </Tab>
        </tabs>
    </TabPane>
</VBox>
